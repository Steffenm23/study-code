#include <stdio.h>

int main()
{ 
  double zahl1;
  double zahl2;
  char operator;

  printf("Rechner gestartet\n");
  printf("Gebe eine Zahl ein: ");
  scanf("%lf", &zahl1);

  printf("Gebe noch eine Zahl ein: ");
  scanf("%lf", &zahl2);

  printf("Gebe einen Operator ein: ");
  scanf(" %c", &operator);

  printf("\n%lf %c %lf\n", zahl1, operator, zahl2);

  if (operator == '+')
      printf("%lf + %lf = %lf\n", zahl1, zahl2, zahl1 + zahl2);
  else if (operator == '-')
      printf("%lf - %lf = %lf\n", zahl1, zahl2, zahl1 - zahl2);
  else if (operator == '*')
      printf("%lf * %lf = %lf\n", zahl1, zahl2, zahl1 * zahl2);
  else if (operator == '/')
      printf("%lf / %lf = %lf\n", zahl1, zahl2, zahl1 / zahl2);
  else
      printf("Keine Rechenoperation ausf√ºhrbar!\n");

  return 0;
}
